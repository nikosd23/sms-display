<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
		>
	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="New Message:"
			/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text=".."
			android:id="@+id/textView" android:layout_gravity="center"/>
	<Button
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:text="Check Inbox"
			android:id="@+id/button" android:layout_gravity="left|center_vertical"
			android:onClick="checkInbox"/>
	<Button
			android:layout_width="160dp"
			android:layout_height="wrap_content"
			android:text="Clean Inbox"
			android:id="@+id/button1" android:layout_gravity="left|center_vertical"
			android:onClick="cleanInbox"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Inbox"
			android:id="@+id/textView1" android:layout_gravity="left|center_vertical"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/listView" android:layout_gravity="left|center_vertical"/>

</LinearLayout>

